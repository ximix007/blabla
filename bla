#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    int x = 1;
    int b = 1;
    printf("vvedite kolichestvo chisel");
    scanf("%i", &n);
    float a[n];
    for(int i=0;i<n;i++)
    {
        printf("vvedite chislo ยน%i\n", i+1);
        scanf("%f", &a[i]);
    }
    for(int i=1;i<n;i++)
    {
        if(a[i]>a[i-1])
        {
            x++;
        }
        else
        {
            x=1;
        }
        if(x>b)
        {
            b = x;
        }
    }
    printf("%i", b);
    return 0;
}
